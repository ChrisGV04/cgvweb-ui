{
  "name": "@cgvweb/ui",
  "version": "0.4.3",
  "repository": "https://github.com/ChrisGV04/cgvweb-ui",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=v16.20.1"
  },
  "scripts": {
    "build": "nuxt-module-build build",
    "dev": "nuxi dev docs",
    "dev:build": "nuxi build docs",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxi typecheck",
    "release": "release-it && npm run build && npm publish"
  },
  "peerDependencies": {
    "@vueuse/core": "^10",
    "radix-vue": "^1"
  },
  "dependencies": {
    "@egoist/tailwindcss-icons": "^1.7.4",
    "@iconify-json/heroicons": "^1.1.21",
    "@nuxt/kit": "^3.11.2",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@tailwindcss/forms": "^0.5.7",
    "defu": "^6.1.4",
    "just-omit": "^2.2.0",
    "just-pick": "^4.2.0",
    "just-safe-get": "^4.2.0",
    "nuxt-icon": "^0.6.10",
    "pathe": "^1.1.2",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^0.3.10",
    "@nuxt/module-builder": "^0.6.0",
    "@nuxt/schema": "^3.11.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.12.7",
    "@vueuse/core": "^10.9.0",
    "changelogen": "^0.5.5",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nuxt": "^3.11.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "radix-vue": "^1.7.3",
    "release-it": "^17.2.1",
    "typescript": "^5.4.5",
    "vue-tsc": "^2.0.15"
  }
}
